@model  EatOut.Models.RestaurantListModel
@{
    ViewBag.Title = "List";
}

<div class=" card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon mdi-action-view-list i-20"></i>
                            <span class="caption-subject font-blue-sharp bold uppercase">Recommendations</span>
                        </div>
                        @*<div class="actions">
                            <a href="/home/create" class="md-btn md-raised pull-right p-h-md green waves-effect waves-effect inline">
                                <i class="fa fa-plus"></i>
                                <span class="hidden-480">New Restaurant</span>
                            </a>
                        </div>*@
                    </div>
                    <div class="portlet-body">
                        <div class="search-box form-inline" style="text-align:right">
                            
                            @using (Html.BeginForm("recommendations", "Home", FormMethod.Post, new { id = "frm_rest" })) { 
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RestaurantName, new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.RestaurantName, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.RestaurantName)})

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Cuisine, new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Cuisine, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Cuisine)})
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Location, new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Location, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Location)})
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Rating, new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Rating, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Rating) })
                                </div>
                                <button id="btn-search" type="submit" class="md-btn md-raised p-h-md blue waves-effect waves-effect inline" md-ink-ripple="">Search</button>
                            }
                        </div>
                        <div class="table-container">
                            <table class="table table-striped table-bordered table-hover table-agenda" id="datatable_ajax">
                                <thead>
                                    <tr role="row" class="heading">
                                        <th>Restaurant Name</th>
                                        <th>Cuisine</th>
                                        <th>Location</th>
                                        <th>Rating</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th class="actions">Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/content/pages/scripts/Ratings.js"></script>
    <script type="text/javascript">
    $(function () {
        Ratings.init();
    });
    </script>
}
